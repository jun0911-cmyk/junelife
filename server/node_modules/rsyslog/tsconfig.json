{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": false,
    "importHelpers": true,
    "lib": [
      "es2015.promise",
      "es2015.symbol",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2017",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
